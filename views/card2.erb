<script type="text/javascript">
    $(function() {
      update_orders_list();
    });
 </script>

<h3>Fill the next fields for confirmation your check</h3>

<form class="" action="/order" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter your name" name="order[name]">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Phone</label>
        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter your phone" name="order[phone]">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Adress</label>
        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="City, Street, House, Flat" name="order[adress]">
        <input type="hidden" class="form-control" id="orders_list" placeholder="City, Street, House, Flat" name="order[order_list]">
    </div>
    <br>

    <table class="table" id="tableCard">
        <thead>
            <th>
                #
            </th>
            <th>
                Product
            </th>
            <th>
                Price of each
            </th>
            <th>
                Number
            </th>
        </thead>
        <% @order_line.each do |product|%>
        <tr>
            <td>
                <%= product[0].id %>
            </td>
            <td>
                <%= product[0].title %>
            </td>
            <td>
                <%= product[0].price %>
            </td>
            <td>
                <%= product[1]%>
            </td>
        </tr>
        <% end %>
      </table>
    <div class="">
      <p style="font-weight: bold; font-size:16px">
        Total PRICE: <%= @total_price %>
        </p>
    </div>
    <br>
    <button type="submit" name="button" class="btn btn-lg btn-success">Confirm Order</button>
</form>
<form class="absolute" action="/cancelorder" method="post">
  <button type="submit" name="button" class="btn btn-lg btn-danger absolute-button">Cancel order</button>
</form>
<div class="">
</div>
